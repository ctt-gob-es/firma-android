<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
	<style name="AppTheme" parent="AppBaseTheme">
	</style>

	<!-- Estilo para la Toolbar. -->
	<style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
		<item name="windowNoTitle">false</item>
		<item name="android:background">@color/toolbar</item>
		<item name="colorOnPrimary">@color/black</item>
	</style>

    <!-- Estilo para pantalla de fondo transparente. -->
	<style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

	<style name="ToolbarTitle">
		<item name="android:fontFamily">@font/merriweatherbold</item>
		<item name="android:textColor">@android:color/black</item>
		<item name="android:textSize">18sp</item>
	</style>

	<style name="ButtonRedSmall">
	    <item name="android:textColor">#FEFEFE</item>
    	<item name="android:textSize">16sp</item>
    	<item name="android:gravity">center_vertical|center_horizontal</item>
    	<item name="android:paddingLeft">7dp</item>
    	<item name="android:paddingRight">7dp</item>
    	<item name="android:paddingTop">0dp</item>
    	<item name="android:paddingBottom">0dp</item>
    	<item name="android:background">@drawable/buttonredbackground</item>
	</style>
	
	<style name="ButtonSignSmall">
	    <item name="android:textColor">#FEFEFE</item>
    	<item name="android:textSize">16sp</item>
    	<item name="android:gravity">center_vertical|center_horizontal</item>
    	<item name="android:paddingLeft">7dp</item>
    	<item name="android:paddingRight">7dp</item>
    	<item name="android:paddingTop">0dp</item>
    	<item name="android:paddingBottom">0dp</item>
	</style>
	
	<style name="ButtonRedLarge">
	    <item name="android:textColor">#FEFEFE</item>
    	<item name="android:textSize">13sp</item>
    	<item name="android:gravity">center_vertical|center_horizontal</item>
    	<item name="android:padding">10dp</item>
		<item name="android:fontFamily">@font/nunitosansbold</item>
    	<item name="android:background">@drawable/red_button_selector</item>
	</style>

	<style name="ButtonWhiteLarge">
		<item name="android:textColor">@drawable/white_button_textcolor_selector</item>
		<item name="android:textSize">13sp</item>
		<item name="android:gravity">center_vertical|center_horizontal</item>
		<item name="android:paddingLeft">7dp</item>
		<item name="android:paddingRight">7dp</item>
		<item name="android:paddingTop">0dp</item>
		<item name="android:paddingBottom">0dp</item>
		<item name="android:fontFamily">@font/nunitosansbold</item>
		<item name="android:background">@drawable/white_button_selector</item>
	</style>
	
	<style name="ButtonWhiteSmall">
	    <item name="android:textColor">#FFFFFF</item>
    	<item name="android:textSize">20sp</item>
    	<item name="android:gravity">center_vertical|center_horizontal</item>
    	<item name="android:paddingLeft">7dp</item>
    	<item name="android:paddingRight">7dp</item>
    	<item name="android:paddingTop">0dp</item>
    	<item name="android:paddingBottom">0dp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="ButtonNoBorder">
		<item name="android:background">@drawable/noborderbutton</item>
	</style>
	
    <style name="ButtonBlackSmall">
	    <item name="android:textColor">#000000</item>
    	<item name="android:textSize">15sp</item>
	</style>
	
    <style name="TextBlack">
	    <item name="android:textColor">#000000</item>
	</style>

	<style name="TextLink">
		<item name="android:textColor">#1311A9</item>
	</style>

    <style name="WhiteBackground">
        <item name="android:background">#FFFFFF</item>
		<item name="android:textColor">#000000</item>
    </style>

	<style name="AlertDialog" parent="@android:style/Theme.Holo.Light.Dialog">
		<item name="android:textColor">#000000</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowMinWidthMajor">90%</item>
		<item name="android:windowMinWidthMinor">90%</item>
	</style>

	<style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
		<item name="bottomSheetStyle">@style/BottomSheetStyle</item>
	</style>

	<style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
		<item name="android:background">@android:color/transparent</item>
	</style>

	<style name="TextViewSettingsTheme" parent="android:Widget.TextView">
		<item name="android:fontFamily">@font/nunitosansbold</item>
		<item name="android:padding">5dp</item>
		<item name="android:textColorPrimary">@android:color/black</item>
		<item name="android:textColorSecondary">@android:color/black</item>
		<item name="android:textColorTertiary">@android:color/black</item>
	</style>

	<style name="TextHintBlack">
		<item name="android:textSize">12sp</item>
		<item name="android:textColor">#000000</item>
	</style>

	<style name="InputLayoutError" parent="TextAppearance.AppCompat.Caption">
		<item name="android:textColor">@android:color/holo_red_dark</item>
	</style>

    
</resources>