<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/enterCan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/nunitosans"
        android:padding="10dp"
        android:text="@string/enter_can_dni_desc"
        android:textColor="@color/black" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/canEtxLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/rounded_black_borders"
        android:hint="@string/enter_can_dni_hint"
        android:padding="10dp"
        android:textColorHint="#464646"
        app:errorTextAppearance="@style/InputLayoutError"
        app:boxBackgroundColor="@android:color/transparent"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:hintTextAppearance="@style/TextHintBlack">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/canEtx"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent"
            android:gravity="bottom"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="@color/black"
            android:maxLength="6"/>

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:src="@drawable/can_example"
            />

        <Button
            android:id="@+id/continueToStep2Btn"
            style="@style/ButtonRedLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="10dp"
            android:onClick="onClick"
            android:text="@string/drag_on" />

    </LinearLayout>


</LinearLayout>