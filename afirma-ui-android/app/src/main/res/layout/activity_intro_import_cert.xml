<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/introImportCert"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/home_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/importCertToolbar"
            android:layout_width="match_parent"
            android:touchscreenBlocksFocus="false"
            app:popupTheme="@style/AppTheme"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ToolbarTheme"
            app:navigationIcon="?attr/homeAsUpIndicator"/>

        <LinearLayout
            android:id="@+id/contentInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="#000000"
                android:fontFamily="@font/merriweatherbold" />

            <TextView
                android:id="@+id/introText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="#56636D"
                android:fontFamily="@font/nunitosans"
                />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/containerVp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.91"
                android:padding="10dp"
             />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/page1Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_margin="5dp"
                    android:src="@drawable/selectedpageindicator" />

                <ImageView
                    android:id="@+id/page2Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_margin="5dp"
                    android:src="@drawable/unselectedpageindicator" />

            </LinearLayout>

            <Button
                android:id="@+id/continueButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="11dp"
                android:onClick="onClick"
                android:text="@string/drag_on"
                android:nextFocusForward="@+id/drawer_layout"
                style="@style/ButtonRedLarge" />

            <Button
                android:id="@+id/importCertButton"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="11dp"
                android:onClick="onClick"
                android:text="@string/add_cert"
                android:nextFocusForward="@+id/drawer_layout"
                style="@style/ButtonRedLarge" />

        </LinearLayout>

    </LinearLayout>




</androidx.drawerlayout.widget.DrawerLayout>